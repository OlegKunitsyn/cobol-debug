{
	"name": "gnucobol-debug",
	"displayName": "COBOL debugger",
	"description": "Debug or execute COBOL code. No mainframe required. Beta.",
	"keywords": [
		"cobol",
		"gnucobol",
		"debugger",
		"debug"
	],
	"version": "0.22.13",
	"publisher": "OlegKunitsyn",
	"license": "GPL-3.0",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.44.0"
	},
	"main": "./out/src/extension",
	"activationEvents": [
		"onDebugResolve"
	],
	"categories": [
		"Debuggers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/OlegKunitsyn/gnucobol-debug.git"
	},
	"contributes": {
		"breakpoints": [
			{
				"language": "cobol"
			},
			{
				"language": "COBOL"
			},
			{
				"language": "ACUCOBOL"
			},
			{
				"language": "OpenCOBOL"
			},
			{
				"language": "GnuCOBOL"
			},
			{
				"language": "entcobol"
			}
		],
		"debuggers": [
			{
				"type": "gdb",
				"program": "./out/src/gdb.js",
				"runtime": "node",
				"label": "COBOL debugger",
				"configurationAttributes": {
					"launch": {
						"required": [
							"target",
							"gdbpath",
							"cobcpath",
							"targetargs",
							"cwd",
							"group"
						],
						"properties": {
							"target": {
								"type": "string",
								"description": "Path to executable",
								"default": "${file}"
							},
							"targetargs": {
								"type": "array",
								"description": "Extra arguments for executable",
								"default": []
							},
							"cwd": {
								"type": "string",
								"description": "Path to project",
								"default": "${workspaceRoot}"
							},
							"gdbpath": {
								"type": "string",
								"description": "Path to gdb",
								"default": "gdb"
							},
							"cobcpath": {
								"type": "string",
								"description": "Path to cobc",
								"default": "cobc"
							},
							"cobcargs": {
								"type": "array",
								"description": "Extra arguments for cobc",
								"default": [
									"-free",
									"-x"
								]
							},
							"group": {
								"type": "array",
								"description": "Compilation Group for executable",
								"default": []
							},
							"env": {
								"type": "object",
								"description": "Environment variables",
								"default": null
							},
							"verbose": {
								"type": "boolean",
								"description": "Debug GDB",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "COBOL debugger",
						"type": "gdb",
						"request": "launch",
						"target": "${file}",
						"targetargs": [],
						"cwd": "${workspaceRoot}",
						"gdbpath": "gdb",
						"cobcpath": "cobc",
						"cobcargs": [
							"-free",
							"-x"
						],
						"group": []
					}
				]
			}
		]
	},
	"scripts": {
		"prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"test": "mocha -u tdd ./out/test/"
	},
	"devDependencies": {
		"@types/node": "^13.13.0",
		"@types/mocha": "^5.2.7",
		"@types/vscode": "^1.44.0",
		"typescript": "^3.8.3",
		"mocha": "^6.2.0",
		"vscode-debugadapter-testsupport": "^1.40.3",
		"tslint": "^5.18.0"
	},
	"dependencies": {
		"n-readlines": "^1.0.0",
		"vscode-debugadapter": "^1.40.0",
		"vscode-debugprotocol": "^1.40.0"
	}
}
